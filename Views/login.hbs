<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <script>
    // Form validation function
    function validateForm(event) {
      const password = document.getElementById("password").value;

      // Check if the password is empty
      if (!password) {
        alert("Password is required.");
        event.preventDefault();  // Prevent the form from submitting
        return false;
      }

      return true;
    }
  </script>
</head>
<body class="h-full bg-gray-50">
  <div class="max-w-md mx-auto mt-6">
    {{#if success}}
    <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
      <strong class="font-bold">Success:</strong>
      <span class="block sm:inline">{{success}}</span>
    </div>
    {{/if}}
  </div>

  <div class="flex min-h-screen items-center justify-center bg-gray-50 px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md bg-white shadow-xl rounded-lg p-8">
      <!-- Logo and Title -->
      <div class="text-center">
        <img class="mx-auto h-12 w-auto" src="https://tailwindui.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
        <h2 class="mt-6 text-3xl font-bold text-gray-900">Log in</h2>
        <p class="mt-2 text-sm text-gray-500">Log in with your email and password</p>
      </div>

      <!-- Login Form -->
      <form class="mt-8 space-y-6" action="/login" method="POST" onsubmit="return validateForm(event)">
        <div class="space-y-4">
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700">Email</label>
            <input type="email" name="email" id="email" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" aria-required="true">
          </div>
          <div>
            <label for="password" class="block text-sm font-medium text-gray-700">Password</label>
            <input type="password" name="password" id="password" required class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" aria-required="true">
          </div>

          <div>
            <button type="submit" class="w-full flex justify-center rounded-md bg-indigo-600 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
              Log in
            </button>
          </div>
        </div>
      </form>

      <!-- Forgot Password Link -->
      <div class="mt-2 text-center">
        <a href="/forgot-password" class="text-sm font-medium text-indigo-600 hover:text-indigo-500">Forgot your password?</a>
      </div>

      <!-- Sign-up Section -->
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-500">Don't have an account?
          <a href="/sign-up" class="font-semibold text-indigo-600 hover:text-indigo-500">Sign up</a>
        </p>
      </div>

      <!-- Divider -->
      <div class="mt-8 border-t border-gray-300"></div>

      <!-- Social Login Section -->
      <div class="mt-6 text-center">
        <p class="text-sm text-gray-500">Or log in with</p>
        <div class="mt-2 flex justify-center space-x-4">
          <button type="button" class="w-8 h-8 flex justify-center items-center rounded-full bg-gray-100 hover:bg-gray-200 focus:outline-none">
            <img src="https://upload.wikimedia.org/wikipedia/commons/a/a1/Google_logo.svg" alt="Google" class="w-5 h-5">
          </button>
          <button type="button" class="w-8 h-8 flex justify-center items-center rounded-full bg-gray-100 hover:bg-gray-200 focus:outline-none">
            <img src="https://upload.wikimedia.org/wikipedia/commons/6/69/Facebook_logo_2019.svg" alt="Facebook" class="w-5 h-5">
          </button>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
